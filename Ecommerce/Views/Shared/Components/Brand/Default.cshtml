@model IEnumerable<Ecommerce.Areas.Admin.Models.Brand>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Brand item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="~/img/pro/@Html.DisplayFor(modelItem => item.Logo)" style="width:100px; height: auto" />
                </td>
                <td>
                    <input id="@item.Id" type="checkbox" name="name" @{ if (item.Status == true) { @: checked
                           } else { @: uncheck
                           } } disabled />
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Index" asp-route-id="@item.Id">Edit</a> |
                    <button id="txtbtn" class="btn btn-warning" name="update_brand_stt" data-id="@item.Id" data-name="@item.Name" data-logo="@item.Logo" data-stt="@(item.Status)">
                        @{
                            if (item.Status == true)
                            {
                                @:Ẩn
                            }
                            else
                            {
                                @:Hiện
                            }
                        }
                    </button>
                </td>

            </tr>
        }
    </tbody>
</table>
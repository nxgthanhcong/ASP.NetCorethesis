
@{
    ViewData["Title"] = "Home";

}


<section class="about py-md-5 py-5">
    <div class="container-fluid">
        <div class="feature-grids row px-3">
            @foreach (Category i1 in ViewBag.ListCate)
            {
                <div class="col-lg-3 gd-bottom">
                    <div class="bottom-gd row bottom-gd2-active">
                        <div class="icon-gd col-md-3 text-center"><span class="fa fa-bullhorn" aria-hidden="true"></span></div>
                        <div class="icon-gd-info col-md-9">
                            <h3 class="mb-2">@i1.Name</h3>
                            <p>On 1st exchange in 30 days</p>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>
<!-- //ab -->
<!--/ab -->
<section class="about py-5">
    <div class="container pb-lg-3">
        <h3 class="tittle text-center">New Arrivals</h3>
        <div class="row">
            @foreach (Product item in ViewBag.ListPros)
            {
                <div class="col-md-4 product-men my-lg-4">
                    <a asp-action="ShopSingle" asp-route-id="@item.ID">
                        <div class="product-shoe-info shoe text-center">
                            <div class="men-thumb-item">
                                <img src="~/img/pro/@Html.DisplayFor(modelItem => item.Imgage)" class="img-fluid" alt="">
                                <span class="product-new-top">New</span>
                            </div>
                            <div class="item-info-product">
                                <h4 style="color:black">
                                    @item.Name
                                </h4>

                                <div class="product_price">
                                    <div class="grid-price">
                                        <span class="money">@Html.DisplayFor(modelItem => item.Price)</span>
                                    </div>
                                </div>
                                <ul class="stars" style="color:black">
                                    <li><span class="fa fa-star" aria-hidden="true"></span></li>
                                    <li><span class="fa fa-star" aria-hidden="true"></span></li>
                                    <li><span class="fa fa-star" aria-hidden="true"></span></li>
                                    <li><span class="fa fa-star-half-o" aria-hidden="true"></span></li>
                                    <li><span class="fa fa-star-o" aria-hidden="true"></span></li>
                                </ul>
                            </div>
                        </div>
                    </a>
                </div>
            }


        </div>

    </div>

</section>

@model Ecommerce.Areas.Admin.Models.User

@{
    ViewData["Title"] = "Create";
}

<h2>@(ViewContext.RouteData.Values["id"]!=null?"Edit User": "Create User")</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="@(ViewContext.RouteData.Values["id"]!=null?"Edit":"Create")"
              asp-controller="User" asp-route-id="@(ViewContext.RouteData.Values["id"]!=null?@ViewContext.RouteData.Values["id"]:"")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                if (ViewContext.RouteData.Values["id"] != null)
                {
                    <input type="hidden" asp-for="ID" />
                }
            }


            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Gmail" class="control-label"></label>
                <input asp-for="Gmail" class="form-control" />
                <span asp-validation-for="Gmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rule" class="control-label"></label>

                <select class="form-control" asp-for="Rule">
                    <option value="0">ADMIN</option>
                    <option value="1">USER</option>
                </select>
                <span asp-validation-for="Rule" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@(ViewContext.RouteData.Values["id"]!=null?"Edit":"Create")" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



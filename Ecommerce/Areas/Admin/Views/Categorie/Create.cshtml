@model Ecommerce.Areas.Admin.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h2>@(ViewContext.RouteData.Values["id"]!=null?"Edit Category": "Create Category")</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="@(ViewContext.RouteData.Values["id"]!=null?"Edit":"Create")"
              asp-controller="Categorie" asp-route-id="@(ViewContext.RouteData.Values["id"]!=null?@ViewContext.RouteData.Values["id"]:"")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                if (ViewContext.RouteData.Values["id"] != null)
                {
                    <input type="hidden" asp-for="ID" />
                }
            }
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="@(ViewContext.RouteData.Values["id"]!=null?"Edit":"Create")" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


